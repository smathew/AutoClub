      <% form_tag do %>
        <CENTER>
          <TABLE Border=1 Cellpadding=7>
            <TR> 
              <TD COLSPAN=2 BGCOLOR=#FFFFEE> 
                <CENTER>
                  <span class=FontThree>Fixed Rate Mortgage Calculator</span> 
                </CENTER>
                <span class=FontThree><hr size="1" width="100%"> 
                <CENTER>
                  <span class=FontThree>
                  </span>Results 
                </CENTER>
                </span> </TD>
            </TR>
            <TR> </TR>
            <TR> 
              <TD BGCOLOR=#EEEEEE> <span class=FontFour> Loan Amount: </span> 
              </TD>
              <TD BGCOLOR=#EEFFEE> <span class=FontFour> 
                <SCRIPT LANGUAGE="JavaScript">
	var A = getValue(passed,'LoanAmount');
	if (A < 0) { A = 0 }
	document.write(currencyPad(A));
</SCRIPT>
                </span> </TD>
            </TR>
            <TR> 
              <TD BGCOLOR=#EEEEEE> <span class=FontFour> Interest Rate: </span> 
              </TD>
              <TD BGCOLOR=#FFEEEE> <span class=FontFour> 
                <SCRIPT LANGUAGE="JavaScript">
	var B = getValue(passed,'InterestRate');
	if (B < 0) { B = 0 }
	document.write(roundingPad((B * 100.00)/100)+"%");
</SCRIPT>
                </span> </TD>
            </TR>
            <TR> 
              <TD BGCOLOR=#EEEEEE> <span class=FontFour> Number of Months to Pay 
                on Loan: </span> </TD>
              <TD BGCOLOR=#EEEEFF> <span class=FontFour> 
			    <%= javascript_include_tag "frmcc" %>
                </span> </TD>
            </TR>
            <TR> 
              <TD BGCOLOR=#EEEEEE> <span class=FontFour> Additional Principal 
                Per Month: </span> </TD>
              <TD BGCOLOR=#FFEEFF> <span class=FontFour> 
                <SCRIPT LANGUAGE="JavaScript">
	document.write(currencyPad(D));
</SCRIPT>
                </span> </TD>
            </TR>
            <TR> 
              <TD BGCOLOR=#EEEEEE> <span class=FontFour> Monthly Payment: </span> 
              </TD>
              <TD BGCOLOR=#EEFFEE> <span class=FontFour> 
                <SCRIPT LANGUAGE="JavaScript">
	document.write(currencyPad(PMT));
</SCRIPT>
                </span> </TD>
            </TR>
            <TR> 
              <TD BGCOLOR=#EEEEEE> <span class=FontFour> Total Interest Paid on 
                Loan: </span> </TD>
              <TD BGCOLOR=#FFEEEE> <span class=FontFour> 
                <SCRIPT LANGUAGE="JavaScript">
	document.write(currencyPad(TOTINT));
</SCRIPT>
                </span> </TD>
            </TR>
          </TABLE>
          <br>
          <br>
		  <%= javascript_include_tag "frmca" %>
		  <%= javascript_include_tag "endb" %>
