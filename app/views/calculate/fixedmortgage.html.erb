<%= javascript_include_tag "style" %>
<%= javascript_include_tag "frmcv" %>
<TABLE WIDTH=500>
  <tr> 
    <td> <CENTER>
      </CENTER>
      <% form_tag(fixedmortgager_path, :method => :get) do %>
        <CENTER>
          <TABLE Border=1 Cellpadding=7>
            <TR> 
              <TD COLSPAN=2 BGCOLOR=#FFFFEE> 
                <CENTER>
                  <span class=FontThree> Fixed Rate Mortgage Calculator</span>
                </CENTER>
              </TD>
            </TR>
            <TR> </TR>
            <TR> 
              <TD BGCOLOR=#EEEEEE> <span class=FontFour> Loan Amount: </span> 
              </TD>
              <TD BGCOLOR=#EEFFEE> 
                <INPUT style="font-family: Verdana, Arial; font-size: 8pt" onFocus=select(); onBlur = checkLA(this.form); NAME = LoanAmount VALUE=250000 >
              </TD>
            </TR>
            <TR> 
              <TD BGCOLOR=#EEEEEE> <span class=FontFour> Interest Rate: </span> 
              </TD>
              <TD BGCOLOR=#FFEEEE> 
                <INPUT style="font-family: Verdana, Arial; font-size: 8pt" onFocus=select(); onBlur = checkIR(this.form); NAME = InterestRate VALUE=8 >
              </TD>
            </TR>
            <TR> 
              <TD BGCOLOR=#EEEEEE> <span class=FontFour> Number of Months: </span> 
              </TD>
              <TD BGCOLOR=#EEEEFF> 
                <INPUT style="font-family: Verdana, Arial; font-size: 8pt" onFocus=select(); onBlur = checkM(this.form); NAME = NumberOfMonths VALUE=360 >
              </TD>
            </TR>
            <TR> 
              <TD BGCOLOR=#EEEEEE> <span class=FontFour> Additional Principal 
                Per Month: </span> </TD>
              <TD BGCOLOR=#FFEEFF> 
                <INPUT style="font-family: Verdana, Arial; font-size: 8pt" onFocus=select(); onBlur = checkAP(this.form); NAME = AdditionalPrincipal VALUE=0 >
              </TD>
            </TR>
            <TR> 
              <TD COLSPAN=2 BGCOLOR=#FFFFEE> <span class=FontFive> 
                <INPUT Type="radio" NAME="calculate_option" VALUE="0" CHECKED>
                Calculate Payment Only<BR>
                <INPUT Type="radio" NAME="calculate_option" VALUE="1">
                Calculate Payment and Display Amortization Schedule<BR>
                </span> </TD>
            </TR>
          </TABLE>
		  <%= javascript_include_tag "enda" %>
        </center>
      <% end %>
</table>
